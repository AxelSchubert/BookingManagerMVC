<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mariatorgets Thai Restaurang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingManagerMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gradient border-bottom-gold box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-contrast" asp-area="" asp-controller="Home" asp-action="Index">Mariatorgets Thai Restaurang</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-contrast" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-contrast" asp-area="" asp-controller="Menu" asp-action="Index">Meny</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-contrast" asp-area="" asp-controller="Booking" asp-action="Index">Bokning</a>
                        </li>
                        @{
							var hasToken = Context.Request.Cookies.ContainsKey("jwtToken");
                        }
                        @if (hasToken)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-contrast" asp-area="" asp-controller="Admin" asp-action="Index">Admin-sida</a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-contrast" href="#" onclick="document.getElementById('logoutForm').submit();">Logga ut</a>
                                <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-none"></form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-contrast" asp-area="" asp-controller="Account" asp-action="Login">Logga in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="pb-3">
		@RenderBody()
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
